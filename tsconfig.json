{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2016"],
    "strict": true,
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "typeRoots" : ["./node_modules/@types", "./globals.d.ts"]
  },
  "exclude": ["node_modules"]
}
